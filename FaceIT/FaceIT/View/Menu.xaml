<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
                  mc:Ignorable="d"
                  x:Class="FaceIT.View.Menu"
                  NavigationPage.HasNavigationBar="False">
    <MasterDetailPage.Master>
        <ContentPage Title="Menu" 
                     Padding="0"
                     BackgroundColor="Transparent"
                     BackgroundImageSource="degradeazul.jpg">
            <ContentPage.Content>
                <StackLayout>   
                    <StackLayout Padding="0,20,0,0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                        <Frame CornerRadius="130"
                               Padding="0"
                               HorizontalOptions="CenterAndExpand">
                            <Image  HeightRequest="150"
                                    WidthRequest="150"
                                    Source="{Binding Imagem}"
                                    HorizontalOptions="CenterAndExpand"
                                    x:Name="image_entry"
                                    Aspect="AspectFill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToProfilePage"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                        <Label 
                            Text="{Binding PessoaJuridica.NomeFantasia}" 
                            TextColor="White" 
                            FontSize="Large"
                            HorizontalTextAlignment="Center"
                            x:Name="juridicanome_entry"
                            IsVisible="False"
                            >
                        </Label>
                        <Label 
                            Text="{Binding PessoaFisica.Nome}" 
                            TextColor="White" 
                            FontSize="Large"
                            HorizontalTextAlignment="Center"
                            x:Name="fisicanome_entry"
                            IsVisible="False">
                        </Label>
                        <StackLayout x:Name="hide_data" IsVisible="False">
                            <Label x:Name="_anexo"/>
                            <Label x:Name="_email" Text="{Binding Email}"></Label>
                            <Label x:Name="_senha" Text="{Binding Senha}"></Label>
                            <Label x:Name="_pjrs" Text="{Binding PessoaJuridica.RazaoSocial}"></Label>
                            <Label x:Name="_pjcnpj" Text="{Binding PessoaJuridica.CNPJ}"></Label>
                            <Label x:Name="_pjIE"  Text="{Binding PessoaJuridica.IE}"></Label>
                            <Label x:Name="_pfCPF" Text="{Binding PessoaFisica.CPF}"></Label>
                            <Label x:Name="_pfRG" Text="{Binding PessoaFisica.RG}"></Label>
                            <Label x:Name="_excluido" Text="{Binding Excluido}"></Label>
                            <Label x:Name="_enderecocep" Text="{Binding Endereco.CEP}"></Label>
                            <Label x:Name="_enderecopais" Text="{Binding Endereco.Pais}"></Label>
                            <Label x:Name="_enderecouf" Text="{Binding Endereco.UF}"></Label>
                            <Label x:Name="_enderecomunicipio" Text="{Binding Endereco.Municipio}"></Label>
                            <Label x:Name="_enderecologradouro" Text="{Binding Endereco.Logradouro}"></Label>
                            <Label x:Name="_endereconumero" Text="{Binding Endereco.Numero}"></Label>
                            <Label x:Name="_enderecocomplemento" Text="{Binding Endereco.Complemento}"></Label>
                            <Label x:Name="_enderecobairro" Text="{Binding Endereco.Bairro}"></Label>
                            <Label x:Name="_tel" Text="{Binding Telefone}"></Label>
                            <Label x:Name="_tipo" Text="{Binding Tipo}"></Label>
                            <Label x:Name="_cel" Text="{Binding Celular}"></Label>
                        </StackLayout>
                        
                        <TableView Intent="Menu" 
                                   HorizontalOptions="FillAndExpand"
                                   HasUnevenRows="True">
                            <TableSection>
                                <ViewCell Tapped="GoToMatchPopUp">
                                    <StackLayout Padding="15,10">
                                        <Label Text="Match" VerticalTextAlignment="Center"
                                               TextColor="White"/>
                                    </StackLayout>
                                </ViewCell>
                            </TableSection>
                            <TableSection>
                                <ViewCell Tapped="GoToRankingPopUp">
                                    <StackLayout Padding="15,10">
                                        <Label Text="Ranking" VerticalTextAlignment="Center"
                                               TextColor="White"/>
                                    </StackLayout>
                                </ViewCell>
                            </TableSection>
                        </TableView>                    
                    </StackLayout> 
                </StackLayout>
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>
</MasterDetailPage>