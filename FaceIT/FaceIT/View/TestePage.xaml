<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:SfListView="clr-namespace:Syncfusion.ListView.XForms;assembly=Syncfusion.SfListView.XForms" xmlns:border="clr-namespace:Syncfusion.XForms.Border;assembly=Syncfusion.Core.XForms"
             mc:Ignorable="d"
             x:Class="FaceIT.View.TestePage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout BackgroundColor="#ededed">
                <StackLayout HorizontalOptions="Center"
                             Margin="0,30,0,0">
                    <Frame CornerRadius="130"
                           Padding="0">
                        <Image Source="{Binding Imagem}"
                               HeightRequest="160"
                               WidthRequest="160"
                               HorizontalOptions="CenterAndExpand"
                               x:Name="img_entry"
                               Aspect="AspectFill"/>
                    </Frame>                    
                </StackLayout>
                <Label Text="{Binding PessoaJuridica.NomeFantasia}" 
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="Transparent"
                       x:Name="juridiconome_entry"/>

                
                <Label Text="{Binding PessoaFisica.Nome}" 
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="25"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       BackgroundColor="Transparent"
                       x:Name="fisicanome_entry"/>

                <StackLayout Orientation="Horizontal" Margin="20,25,20,0"
                             HeightRequest="150">

                    <StackLayout HorizontalOptions="StartAndExpand">
                        <Frame CornerRadius="130"
                               Padding="0"
                               BackgroundColor="#ededed"
                               HeightRequest="80"
                               WidthRequest="80"
                               BorderColor="Transparent"
                               HasShadow="True">
                            <Image Source="configuracoes.png"
                                   HeightRequest="50"
                                   WidthRequest="50">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToSettingsPage"/>
                                </Image.GestureRecognizers>                                
                            </Image>
                        </Frame>
                        <Label Text="Configurações"
                               TextColor="#838383"
                               FontSize="15"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>

                    <StackLayout HorizontalOptions="CenterAndExpand"
                                 VerticalOptions="EndAndExpand">
                        <Frame CornerRadius="80"
                               Padding="0"
                               BackgroundColor="#004080"
                               WidthRequest="80"
                               HeightRequest="80"
                               BorderColor="Transparent"
                               HasShadow="True">
                            <StackLayout HorizontalOptions="Center"
                                         VerticalOptions="Center">
                                <Image Source="editar.png"
                                       WidthRequest="50"
                                       HeightRequest="50">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="GoToEditProfile"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </StackLayout>
                        </Frame>
                        <Label Text="Edital Perfil"
                               TextColor="#838383"
                               FontSize="15"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>

                    <StackLayout HorizontalOptions="EndAndExpand">
                        <Frame CornerRadius="130"
                               Padding="0"
                               BackgroundColor="#ededed"
                               HeightRequest="80"
                               WidthRequest="80"
                               BorderColor="Transparent"
                               HasShadow="True">
                            <Image Source="pergunta.png"                               
                                   HeightRequest="50"
                                   WidthRequest="50"
                                   Aspect="AspectFill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="GoToFaqPage"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Frame>
                        <Label Text="Faq"
                               TextColor="#838383"
                               FontSize="15"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>
                    </StackLayout>
                </StackLayout>
